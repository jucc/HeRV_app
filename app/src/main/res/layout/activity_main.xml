<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".activities.MainActivity">


    <!-- HEART RATE MONITORING -->

    <Button
        android:id="@+id/bt_pair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:onClick="scanDevices"
        android:text="@string/pair_device"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ToggleButton
        android:id="@+id/tg_heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:fontFamily="monospace"
        android:text="Heart Monitor"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintRight_toRightOf="@+id/bt_pair"
        app:layout_constraintTop_toBottomOf="@+id/bt_pair"
        android:layout_marginTop="16dp" />


    <TextView
        android:id="@+id/tv_paired_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_device_paired"
        android:textAlignment="center"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintLeft_toRightOf="@+id/bt_pair"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/bt_pair"
        />


    <TextView
        android:id="@+id/tv_heartrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_monitoroff"
        android:textAlignment="center"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintLeft_toRightOf="@+id/tg_heart"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tg_heart"
        app:layout_constraintHorizontal_bias="0.47" />


    <!-- ACTIVITY LOGGING -->

    <TextView
        android:id="@+id/tv_session"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:text="@string/session"
        android:textColor="@color/herv_light_red"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tg_heart" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/ab_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startActivity"
        app:fabSize="mini"
        app:backgroundTint="@color/herv_primary_red"
        android:visibility="visible"
        app:layout_constraintLeft_toRightOf="@id/tv_session"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintTop_toTopOf="@id/tv_session"
        app:srcCompat="@android:drawable/ic_media_play" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/ab_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="stopActivity"
        app:backgroundTint="@color/herv_primary_red"
        android:visibility="invisible"
        app:fabSize="mini"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintLeft_toRightOf="@id/tv_session"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_session"
        app:srcCompat="@android:drawable/ic_media_pause" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/ab_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startActivity"
        app:backgroundTint="@color/herv_light_red"
        android:visibility="invisible"
        app:fabSize="mini"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintLeft_toRightOf="@id/tv_session"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_session"
        app:srcCompat="@android:drawable/ic_delete" />

    <RadioGroup
        android:id="@+id/rg_posture"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ab_start"
        android:layout_marginTop="32dp">

        <RadioButton
            android:id="@+id/rb_liedown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/posture_lie" />

        <RadioButton
            android:id="@+id/rb_sit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/posture_sit" />

        <RadioButton
            android:id="@+id/rb_stand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/posture_stand" />

    </RadioGroup>

    <Spinner
        android:id="@+id/sp_activity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rg_posture"
        android:layout_marginTop="32dp"/>

    <Button
        android:id="@+id/bt_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/herv_light_red"
        android:onClick="authenticate"
        android:text="@string/common_signin_button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="16dp" />


</android.support.constraint.ConstraintLayout>

