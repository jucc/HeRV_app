<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.lifegrep.heart.MainActivity">

    <Switch
        android:id="@+id/sw_heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="64dp"
        android:onClick="toggleHeartMonitor"
        android:text="@string/text_monitorswitch"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_heartbeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_monitoroff"
        app:layout_constraintBaseline_toBaselineOf="@+id/sw_heart"
        android:layout_marginRight="80dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/sw_heart"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/tv_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_activitystart"
        android:layout_marginStart="109dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="51dp"
        app:layout_constraintTop_toBottomOf="@+id/sw_heart" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:clickable="true"
        android:onClick="startActivity"
        app:fabSize="mini"
        app:layout_constraintTop_toBottomOf="@+id/tv_heartbeat"
        app:srcCompat="@android:drawable/ic_media_play"
        android:layout_marginRight="90dp"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>

