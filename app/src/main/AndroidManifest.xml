<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.lifegrep.heart">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <!-- needed from lollipop onwards in order to be able to read BLE devices !-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- cache files before sending to online db !-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.bluetooth_le" android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_1"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- app starting activity -->
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- search for devices !-->
        <activity android:name=".activities.DeviceScanActivity"/>
        <!-- allow user to log current activity !-->
        <activity android:name=".activities.ActivitySelectionActivity"/>
        <!-- connect to BLE (polar H7) device -->
        <service android:name=".services.BluetoothLeService" android:enabled="true"/>

    </application>

</manifest>